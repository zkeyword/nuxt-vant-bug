one-line(){
    width: 100%
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis
}

two-line(){
    overflow: hidden
    text-overflow: ellipsis
    display: -webkit-box;
    -webkit-line-clamp: 2
    -webkit-box-orient: vertical
}

clear(n) 
    zoom: 1
    &:after
        visibility: hidden
        display: block
        font-size: 0
        content: " "
        clear: n
        height: 0

no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

-pos(type, args)
  i = 0
  position: unquote(type)
  for j in (1..4)
    if length(args) > i
      {args[i]}: args[i + 1] is a 'unit' ? args[i += 1] : 0
    i += 1

fixed()
  -pos('fixed', arguments)

absolute()
  -pos('absolute', arguments)

relative()
  -pos('relative', arguments)

flexCenter()
  display: flex
  align-items: center
  justify-content: center

alignItemsCenter()
  display: flex
  align-items: center

justifyContentCenter()
  display: flex
  justify-content: center